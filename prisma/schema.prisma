// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified DateTime?
  profilePic    String?
  password      String
  role          UserRole  @default(USER)
}

model EmailVerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token]) //only one unique token for specific email
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token]) //only one unique token for specific email
}

model Member {
  id   String @id @default(cuid())
  slug String @unique

  email        String              @unique
  name         String
  picture      String
  description  String?
  education    String[]
  organization String[]
  positionSlug String
  position     Position            @relation(fields: [positionSlug], references: [slug], onDelete: Cascade)
  practices    MembersOnPractice[]

  joinedSince DateTime?
}

model Position {
  id      String   @id @default(cuid())
  slug    String   @unique
  name    String   @unique
  members Member[]
}

model Practice {
  id      String              @id @default(cuid())
  slug    String              @unique
  name    String              @unique
  icon    String
  picture String          
  content String
  members MembersOnPractice[]
}

model MembersOnPractice {
  member     Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  memberId   String // relation scalar field (used in the `@relation` attribute above)
  practice   Practice @relation(fields: [practiceId], references: [id])
  practiceId String // relation scalar field (used in the `@relation` attribute above)

  @@id([memberId, practiceId])
}
