generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified DateTime?
  profilePic    String?
  password      String
  role          UserRole  @default(USER)
}

model EmailVerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token]) //only one unique token for specific email
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token]) //only one unique token for specific email
}

model Member {
  id String @id @default(cuid())

  email        String   @unique
  name         String
  picture      String
  description  String?
  education    String[]
  organization String[]
  practices    String[]
  positionId   String
  position     Position @relation(fields: [positionId], references: [id])

  joinedSince DateTime?
}

model Position {
  id      String   @id @default(cuid())
  name    String   @unique
  members Member[]
}
